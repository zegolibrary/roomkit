<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="155dp"
    android:layout_height="44dp"
    android:background="@drawable/roomkit_drawable_round_stroke_white">

    <RelativeLayout
        android:id="@+id/screen_share_float_back"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        >

        <ImageView
            android:id="@+id/screen_share_float_back_img"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/screen_share_float_back_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/screen_share_float_back_img"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/roomkit_share_screen_back_placeholder"
            android:textColor="@color/roomkit_color_gray_level26"
            android:textSize="9dp" />
    </RelativeLayout>

    <View
        android:layout_width="@dimen/roomkit_dimen_1"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/screen_share_float_back"
        android:background="@color/roomkit_color_gray_level26"
        app:layout_constraintStart_toEndOf="@id/screen_share_float_back" />

    <RelativeLayout
        android:id="@+id/screen_share_float_stop"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        >

        <ImageView
            android:id="@+id/screen_share_float_stop_img"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/roomkit_capture_float_stop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/screen_share_float_stop_img"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/roomkit_finish_share"
            android:textColor="@color/roomkit_color_gray_level26"
            android:textSize="9dp" />
    </RelativeLayout>

</LinearLayout>
