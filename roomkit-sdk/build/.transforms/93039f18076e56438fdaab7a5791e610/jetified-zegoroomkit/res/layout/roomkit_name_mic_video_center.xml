<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:visibility="visible">
        <TextView
            style="@style/Roomkit_NameMicText"
            android:ellipsize="end"
            android:layout_weight="1"
            android:textSize="13dp" />
        <TextView
            style="@style/Roomkit_NameMicText"
            android:textSize="13dp" />
        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="2dp">

            <im.zego.roomkit.videostream.videoview.WaveImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:wave_bottom="4dp"
                app:wave_disable="@drawable/roomkit_saveflow_closemicro2"
                app:wave_empty_image="@drawable/roomkit_mic_soundwave2"
                app:wave_full_image="@drawable/roomkit_mic_soundwave_full2"
                app:wave_top="11dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/roomkit_name_mic_bg36"
        android:paddingLeft="9dp"
        android:paddingRight="8dp"
        android:visibility="visible">

        <TextView
            style="@style/Roomkit_NameMicText"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textSize="10dp" />
        <TextView
            style="@style/Roomkit_NameMicText"
            android:textSize="10dp" />
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp">

            <im.zego.roomkit.videostream.videoview.WaveImageView
                app:wave_empty_image="@drawable/roomkit_soundwave2"
                app:wave_full_image="@drawable/roomkit_soundwave_full2"
                app:wave_disable="@drawable/roomkit_soundwave_disable2"
                app:wave_top="9dp"
                app:wave_bottom="3dp"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            style="@style/Roomkit_NameMicText"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textSize="9dp" />
        <TextView
            style="@style/Roomkit_NameMicText"
            android:textSize="9dp" />
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="1dp">

            <im.zego.roomkit.videostream.videoview.WaveImageView
                app:wave_empty_image="@drawable/roomkit_soundwave2"
                app:wave_full_image="@drawable/roomkit_soundwave_full2"
                app:wave_disable="@drawable/roomkit_soundwave_disable2"
                app:wave_top="9dp"
                app:wave_bottom="3dp"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/roomkit_name_mic_bg32"
        android:paddingLeft="6dp"
        android:paddingRight="5dp"
        android:visibility="visible">

        <TextView
            style="@style/Roomkit_NameMicText"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textSize="9dp" />
        <TextView
            style="@style/Roomkit_NameMicText"
            android:textSize="9dp" />
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="1dp">

            <im.zego.roomkit.videostream.videoview.WaveImageView
                app:wave_empty_image="@drawable/roomkit_soundwave2"
                app:wave_full_image="@drawable/roomkit_soundwave_full2"
                app:wave_disable="@drawable/roomkit_soundwave_disable2"
                app:wave_top="9dp"
                app:wave_bottom="3dp"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>