<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="13dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/roomkit_bottom_dialog_item_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/left"
            style="@style/Roomkit_conference_bottom_dialog_middle_item_style"
            android:drawableTop="@drawable/roomkit_bottom_dialog_camera_switch_icon_bg"
            />

        <TextView
            android:id="@+id/middle"
            style="@style/Roomkit_conference_bottom_dialog_middle_item_style"
            android:drawableTop="@drawable/roomkit_bottom_dialog_speaker_icon_bg"
            />

        <TextView
            android:id="@+id/right"
            style="@style/Roomkit_conference_bottom_dialog_middle_item_style"
            android:drawableTop="@drawable/roomkit_bottom_dialog_audio_only_icon_bg"
            tools:text="收拾收拾 加快东北妇女健康地方"

            />

        <TextView
            android:id="@+id/mirror"
            style="@style/Roomkit_conference_bottom_dialog_middle_item_style"
            android:text="@string/roomkit_mirror_change"
            android:drawableTop="@drawable/roomkit_bottom_dialog_mirror_icon_bg"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/roomkit_bottom_dialog_item_bg"
        android:gravity="center"
        android:text="@string/roomkit_cancel"
        android:textColor="@color/roomkit_color_gray_level4"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

