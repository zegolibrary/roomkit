<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/roomkit_color_gray_level2"
    android:layout_height="55dp"
    >

    <TextView
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginLeft="12dp"
        android:clickable="false"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:background="@drawable/roomkit_port_large_room_im_edit_bg_sel"
        android:text="@string/roomkit_send_message_placeholder"
        android:id="@+id/tv_port_im_chat"
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/roomkit_vertical_im_input2"
        android:textSize="13dp"
        android:textColor="@color/roomkit_color_gray_level16"/>
    <LinearLayout
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/roomkit_portrait_flip_screen_bt"
        android:layout_marginRight="12dp"
        android:id="@+id/ll_screen_flip"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/roomkit_vertical_flip_screen2"/>
    </LinearLayout>
</RelativeLayout>