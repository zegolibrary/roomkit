<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tool_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roomkit_white_board_tool_view_unselect_bg"
    android:elevation="8dp"
    android:gravity="center"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tool_click"
        style="@style/Roomkit_tools_text_style"
        android:background="@drawable/roomkit_wbtools_item_background"
        android:drawableTop="@drawable/roomkit_toolbar_icon_click"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/roomkit_file_whiteboard_tool_click" />

    <TextView
        android:id="@+id/pointer"
        style="@style/Roomkit_tools_text_style"
        android:background="@drawable/roomkit_wbtools_item_background"
        android:drawableTop="@drawable/roomkit_toolbar_icon_pointer"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/roomkit_pointer" />

    <TextView
        android:id="@+id/drag"
        style="@style/Roomkit_tools_text_style"
        android:background="@drawable/roomkit_wbtools_item_background"
        android:drawableTop="@drawable/roomkit_drawable_tools_drag"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/roomkit_whiteboard_tools_hand" />

    <TextView
        android:id="@+id/laser"
        style="@style/Roomkit_tools_text_style"
        android:background="@drawable/roomkit_wbtools_item_background"
        android:drawableTop="@drawable/roomkit_drawable_tools_laser"
        android:padding="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/roomkit_whiteboard_tools_ray_pen" />

    <TextView
        android:id="@+id/paint_brush"
        style="@style/Roomkit_tools_text_style"
        android:background="@drawable/roomkit_wbtools_item_background"
        android:drawableTop="@drawable/roomkit_toolbar_icon_paint_brush"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/roomkit_brush" />

    <TextView
        android:id="@+id/text_brush"
        style="@style/Roomkit_tools_text_style"
        android:background="@drawable/roomkit_wbtools_item_background"
        android:drawableTop="@drawable/roomkit_toolbar_icon_text_brush"
        android:text="@string/roomkit_text" />

    <TextView
        android:id="@+id/eraser"
        style="@style/Roomkit_tools_text_style"
        android:background="@drawable/roomkit_wbtools_item_background"
        android:drawableTop="@drawable/roomkit_toolbar_icon_eraser"
        android:padding="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/roomkit_eraser" />

    <TextView
        android:id="@+id/tool_more"
        style="@style/Roomkit_tools_text_style"
        android:background="@drawable/roomkit_wbtools_item_background"
        android:drawableTop="@drawable/roomkit_toolbar_icon_more"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/roomkit_whiteboard_tool_more" />
</LinearLayout>