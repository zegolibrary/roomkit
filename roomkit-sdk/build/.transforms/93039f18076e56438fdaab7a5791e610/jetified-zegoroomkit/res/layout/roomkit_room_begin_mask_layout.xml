<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/room_un_begin_for_host"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/roomkit_color_extend_level1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/roomkit_not_start_note"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/roomkit_color_gray_level18"
            android:text="@string/roomkit_large_room_tips_not_start_host"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/tv_begin_room"
            android:layout_marginTop="28dp"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:gravity="center"
            android:text="@string/roomkit_large_room_start_button_title"
            android:textColor="@color/roomkit_color_gray_level26"
            android:textSize="14dp"
            android:background="@drawable/roomkit_large_room_begin_bg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/room_un_begin_for_guest"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/roomkit_color_extend_level1"
        >
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/roomkit_room_un_begin_for_student"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/tv_room_unbegin_tip"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:gravity="center"
            android:text="@string/roomkit_large_room_tips_not_start_attendee"
            android:textColor="@color/roomkit_color_gray_level18"
            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/count_down_tv"
            android:layout_height="wrap_content"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:gravity="center"
            android:text="@string/roomkit_room_start_in_time"
            android:textColor="@color/roomkit_color_gray_level18"
            android:textSize="14dp" />
    </LinearLayout>
</FrameLayout>