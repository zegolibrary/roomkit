<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_layout"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roomkit_bottom_dialog_item_bg"
        android:paddingTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/top"
            android:layout_width="308dp"
            android:layout_height="46dp"
            android:background="@drawable/roomkit_bottom_dialog_title_item_bg"
            android:gravity="center"
            android:text="@string/roomkit_file"
            android:textSize="13dp"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            app:layout_constraintTop_toBottomOf="@id/top"
            >
            <TextView
                android:id="@+id/left"
                style="@style/Roomkit_conference_bottom_dialog_middle_item_style"
                android:drawableTop="@drawable/roomkit_bottom_dialog_white_board"
                android:text="@string/roomkit_whiteboard"
                />

            <TextView
                android:id="@+id/middle"
                style="@style/Roomkit_conference_bottom_dialog_middle_item_style"
                android:drawableTop="@drawable/roomkit_bottom_dialog_file"
                android:text="@string/roomkit_file"
                />

            <TextView
                android:id="@+id/right"
                style="@style/Roomkit_conference_bottom_dialog_middle_item_style"
                android:drawableTop="@drawable/roomkit_bottom_dialog_screen"
                android:text="@string/roomkit_screen"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/roomkit_bottom_dialog_item_bg"
        android:gravity="center"
        android:text="@string/roomkit_cancel"
        android:textColor="@color/roomkit_color_gray_level4"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>

