<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/roomkit_color_gray_level1"/>

    <TextView
        android:id="@+id/room_top_toast"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        android:background="@drawable/roomkit_meeting_top_toast_bg"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:maxWidth="330dp"
        android:paddingStart="@dimen/roomkit_toast_margin_end"
        android:paddingEnd="@dimen/roomkit_toast_margin_start"
        android:singleLine="true"
        android:textColor="@color/roomkit_color_gray_level26"
        android:textSize="@dimen/roomkit_textSize_22"
        android:visibility="gone"
        tools:visibility="visible"
        />

</FrameLayout>
