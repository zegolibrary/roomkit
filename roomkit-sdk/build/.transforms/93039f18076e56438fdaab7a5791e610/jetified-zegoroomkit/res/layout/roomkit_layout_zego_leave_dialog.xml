<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_layout"
        android:layout_width="360dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roomkit_bottom_dialog_item_bg"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/roomkit_end_of_conference"
            android:textColor="@color/roomkit_color_gray_level17"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/first_choice"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="@string/roomkit_conference_leave"
            android:textColor="@color/roomkit_color_gray_level4"
            android:textSize="@dimen/roomkit_dp_textSize_34"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/roomkit_color_gray_level21"
            app:layout_constraintTop_toTopOf="@id/first_choice" />

        <TextView
            android:id="@+id/second_choice"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="@string/roomkit_conference_end"
            android:textColor="@color/roomkit_color_tips_level1"
            android:textSize="@dimen/roomkit_dp_textSize_34"
            app:layout_constraintTop_toBottomOf="@id/first_choice" />

        <View
            android:id="@+id/second_choice_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/roomkit_color_gray_level21"
            app:layout_constraintTop_toTopOf="@id/second_choice" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/roomkit_bottom_dialog_item_bg"
        android:gravity="center"
        android:text="@string/roomkit_cancel"
        android:textColor="@color/roomkit_color_gray_level4"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>

