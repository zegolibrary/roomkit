<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_toast_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_msg_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="28dp"
        android:layout_gravity="center"
        android:background="@drawable/roomkit_toast_bg"
        android:gravity="center"
        android:paddingEnd="@dimen/roomkit_toast_margin_start"
        android:paddingStart="@dimen/roomkit_toast_margin_end"
        android:textColor="@color/roomkit_color_gray_level26"
        android:textSize="@dimen/roomkit_textSize_24" />

</LinearLayout>