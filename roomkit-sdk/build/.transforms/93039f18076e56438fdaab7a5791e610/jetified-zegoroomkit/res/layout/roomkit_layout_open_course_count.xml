<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/open_course_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/roomkit_file_opened_count_tips"
        android:textColor="@color/roomkit_color_gray_level26"
        android:textSize="@dimen/roomkit_room_textSize_22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/open_course_count_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:paddingStart="7dp"
        android:paddingEnd="15dp"
        android:src="@drawable/roomkit_fileshare_close2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/open_course_count_tv"
        app:layout_constraintTop_toTopOf="parent" />
</merge>